@model habersite.Models.News
@{
    ViewData["Title"] = "Yeni Haber Ekle";
    var categories = ViewBag.Categories as List<habersite.Models.Category> ?? new List<habersite.Models.Category>();
}

<div class="container mt-4">

    <div class="card shadow">

        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-newspaper"></i> Yeni Haber Ekle</h5>
            <a asp-action="NewsList" class="btn btn-light btn-sm">
                <i class="fas fa-list"></i> Haber Listesine Dön
            </a>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    {{-- Formu genişlettik --}}

                    @* Başarı veya Hata Mesajları *@
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                    }

                    @* Uyarı: Kategori Eksikse *@
                    @if (!categories.Any())
                    {
                        <div class="alert alert-warning mb-4">
                            <strong>Uyarı!</strong> Henüz aktif kategori eklenmemiş. Lütfen devam etmeden önce bir kategori ekleyin.
                            <a href="@Url.Action("CreateCategory")" class="btn btn-sm btn-info ms-2">Kategori Ekle</a>
                        </div>
                    }

                    <form asp-action="CreateNews" method="post" enctype="multipart/form-data">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            {{-- SOL SÜTUN --}}
                            <div class="col-md-8">

                                {{-- Haber Başlığı --}}
                                <div class="mb-3">
                                    <label asp-for="Title" class="form-label">Haber Başlığı</label>
                                    <input asp-for="Title" class="form-control" placeholder="Haberin ana başlığını girin" required />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>

                                {{-- Haber İçeriği (Content) --}}
                                <div class="mb-3">
                                    <label asp-for="Content" class="form-label">Haber İçeriği (TinyMCE Editörü)</label>
                                    {{-- KRİTİK DÜZELTME: TinyMCE'nin bağlanacağı ID eklendi --}}
                                    <textarea asp-for="Content" id="Content" class="form-control" rows="15" placeholder="Haberin tüm detayları"></textarea>
                                    <span asp-validation-for="Content" class="text-danger"></span>
                                </div>
                            </div>

                            {{-- SAĞ SÜTUN (Ayarlar) --}}
                            <div class="col-md-4">
                                <div class="card bg-light p-3">
                                    <h6 class="card-title">Haber Ayarları</h6>

                                    {{-- Kategori Seçimi --}}
                                    <div class="mb-3">
                                        <label asp-for="CategoryId" class="form-label">Kategori Seçin</label>
                                        @if (categories.Any())
                                        {
                                            <select asp-for="CategoryId" class="form-control" required>
                                                <option value="">Kategori Seçin</option>
                                                @foreach (var category in categories)
                                                {
                                                    <option value="@category.CategoryId">@category.Name</option>
                                                }
                                            </select>
                                        }
                                        else
                                        {
                                            <select class="form-control" disabled>
                                                <option>Kategori bulunamadı</option>
                                            </select>
                                            <small class="text-danger">Önce kategori eklemelisiniz.</small>
                                        }
                                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                                    </div>

                                    {{-- Kısa Açıklama / Özellik --}}
                                    <div class="mb-3">
                                        <label asp-for="Description" class="form-label">Kısa Açıklama (Spot)</label>
                                        <textarea asp-for="Description" class="form-control" rows="2" placeholder="Haberin özetini girin"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>

                                    {{-- Resim Yükleme --}}
                                    <div class="mb-3">
                                        <label class="form-label">Resim Yükle</label>
                                        <input type="file" name="file" class="form-control" />
                                        <small class="text-muted">Ana görsel (PNG, JPG).</small>
                                    </div>

                                    {{-- Yayın Durumu --}}
                                    <div class="form-group form-check mb-3">
                                        <input class="form-check-input" asp-for="IsActive" />
                                        <label class="form-check-label" asp-for="IsActive">
                                            Haberi Hemen Yayınla
                                        </label>
                                    </div>

                                </div>
                            </div>
                        </div>

                        {{-- Kaydet Butonları --}}
                        <div class="form-group pt-4 text-center">
                            <button type="submit" class="btn btn-primary me-2 btn-lg">
                                <i class="fas fa-save"></i> Haberi Kaydet ve Yayınla
                            </button>
                            <a asp-action="NewsList" class="btn btn-secondary btn-lg">
                                İptal
                            </a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
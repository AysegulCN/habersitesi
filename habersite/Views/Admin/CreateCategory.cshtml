@model List<habersite.Models.Category>
@{
    ViewData["Title"] = "Kategori Yönetimi";
    // Bu kodun çalışması için 'using habersite.Models;' Controller'da olmalı
}

<div class="container-fluid mt-4">

    @* --- Başarı Mesajı Alanı --- *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Başarılı!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow mb-4">

        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">@ViewData["Title"]</h5>
            <a href="@Url.Action("CreateCategory")" class="btn btn-success btn-sm">
                <i class="fas fa-plus"></i> Yeni Kategori Ekle
            </a>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Ad</th>
                            <th class="d-none d-md-table-cell">Açıklama</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.CategoryId</td> 
                                <td>@category.Name</td>
                                <td class="d-none d-md-table-cell">@category.Description</td>
                                <td>
                                    @if (category.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Pasif</span>
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("EditCategory", new { id = category.CategoryId })" class="btn btn-warning btn-sm" title="Düzenle">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("DeleteCategory", new { id = category.CategoryId })" class="btn btn-danger btn-sm" title="Sil" onclick="return confirm('Kategoriyi silmek istediğinize emin misiniz?')">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div> 
    </div> 
</div>
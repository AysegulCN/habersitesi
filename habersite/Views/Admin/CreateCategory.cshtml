@model habersite.Models.Category
@{
    ViewData["Title"] = "Yeni Kategori Ekle";
}

<div class="container mt-4">

    <div class="card shadow">

        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-folder-plus"></i> Yeni Kategori Ekle</h5>
            <a asp-action="CategoryList" class="btn btn-light btn-sm">
                <i class="fas fa-list"></i> Kategori Listesine Dön
            </a>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-8">

                    <form asp-action="CreateCategory" method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Kategori Adı</label>
                            <input asp-for="Name" class="form-control" placeholder="Kategori adını girin (Örn: Spor)" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Kısa Açıklama</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Kategori açıklamasını girin"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check mb-3">
                            <input class="form-check-input" asp-for="IsActive" />
                            <label class="form-check-label" asp-for="IsActive">
                                Aktif Olarak Yayınla
                            </label>
                        </div>

                        <div class="form-group pt-2">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fas fa-save"></i> Kaydet
                            </button>
                            <a asp-action="CategoryList" class="btn btn-secondary">
                                İptal
                            </a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
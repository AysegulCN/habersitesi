@* Views/Admin/NewsList.cshtml *@

@{
    Layout = "_Layout";
    ViewData["Title"] = "Tüm Haberleri Yönet";
}

@section Head {
    <link href="~/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}
@section Scripts {
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/demo/datatables-demo.js"></script>
}

<div class="container-fluid">

    <h1 class="h3 mb-2 text-gray-800">@ViewData["Title"]</h1>
    <p class="mb-4">Yayınlanmış, taslak veya planlanmış tüm haberlerinizi buradan yönetebilirsiniz.</p>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Haber Kayıtları</h6>
            @* CreateNews Action'ı için link: Controller'da bu Action'ın (metodun) var olduğundan emin olun *@
            <a asp-controller="Admin" asp-action="CreateNews" class="btn btn-primary btn-sm">Yeni Haber Ekle</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Başlık</th>
                            <th>Kategori</th>
                            <th>Yazar</th>
                            <th>Yayın Tarihi</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Dünya Borsalarında Son Durum</td>
                            <td>Ekonomi</td>
                            <td>B. Yılmaz</td>
                            <td>2025/11/15</td>
                            <td><span class="badge badge-success">Yayınlandı</span></td>
                            <td><a href="#" class="btn btn-info btn-sm">Düzenle</a></td>
                        </tr>
                        <tr>
                            <td>Geleceğin Yapay Zeka Trendleri</td>
                            <td>Teknoloji</td>
                            <td>S. Kaya</td>
                            <td>2025/11/10</td>
                            <td><span class="badge badge-warning">Taslak</span></td>
                            <td><a href="#" class="btn btn-info btn-sm">Düzenle</a></td>
                        </tr>
                        @* ...DİĞER HABERLER... *@
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>



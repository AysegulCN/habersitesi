@model List<habersite.Models.News>
@{
    ViewData["Title"] = "Haber Listesi";
}

<div class="container mt-4">
    <h2>Haber Listesi</h2>

    <div class="mb-3">
        <a href="@Url.Action("CreateNews")" class="btn btn-success">Yeni Haber Ekle</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Başlık</th>
                <th>Kategori</th>
                <th>Tarih</th>
                <th>Durum</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var news in Model)
                {
                    <tr>
                        {{-- news.Id yerine news.NewsId kullanıldı --}}
                        <td>@news.NewsId</td>
                        <td>@news.Title</td>
                        <td>@news.Category?.Name</td>
                        public DateTime CreatedDate { get; set; } = DateTime.Now;
                        <td>
                            @if (news.IsActive)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Pasif</span>
                            }
                        </td>
                        <td>
                           
                            <a href="@Url.Action("EditNews", new { id = news.NewsId })" class="btn btn-warning btn-sm">Düzenle</a>
                            <a href="@Url.Action("DeleteNews", new { id = news.NewsId })" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">Henüz haber eklenmemiş.</td>
                </tr>
            }
        </tbody>
    </table>
</div>